<%= render partial: 'aypex/admin/shared/order_tabs', locals: { current: :return_authorizations } %>

<% content_for :page_title do %>
  / <%= Aypex.t(:new_return_authorization) %>
<% end %>

<%= render partial: 'aypex/admin/shared/error_messages', locals: { target: @return_authorization } %>
<%= form_with model: [:admin, @order, @return_authorization] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Aypex.t(:create), 'save.svg' %>
      <span class="or"><%= Aypex.t(:or) %></span>
      <%= link_to_with_icon I18n.t('aypex.admin.actions.cancel'), aypex.admin_order_return_authorizations_url(@order), icon: 'x-lg.svg' %>
    </div>
  </fieldset>
<% end %>
