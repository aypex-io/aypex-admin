<div class="card-body calculator-fields">
  <div class="row mb-0" data-controller="input-disable">
    <div class="form-group col-12">
      <% field_name = "#{param_prefix}[calculator_type]" %>

      <div class="form-floating">
        <%= select_tag field_name, options_from_collection_for_select(Aypex::Promotion::Actions::CreateItemAdjustments.calculators, :to_s, :description, promotion_action.calculator.type), class: 'form-select', data: {action: "input-disable#checkForChanges"} %>
        <%= label_tag field_name, I18n.t("aypex.admin.calculator") %>
      </div>
    </div>

    <% unless promotion_action.new_record? %>
      <%= render partial: "aypex/admin/promotions/calculators/#{path_for promotion_action.calculator}", locals: {param_prefix: param_prefix, promotion_action: promotion_action} %>
      <%= hidden_field_tag "#{param_prefix}[calculator_attributes][id]", promotion_action.calculator.id, data: {input_disable_target: "disable" } %>
    <% end %>
  </div>
</div>
