<%= form_with model: @promotion, url: object_url, method: :put, data: { controller: 'form-state' } do |f| %>
  <%= f.fields_for :promotion_rules, promotion_rule do |pr|%>
    <%= f.field_container :country_id do %>
      <% opts = options_for_select(Aypex::Country.pluck(:name, :id), promotion_rule.country_id) %>

      <%= pr.select :country_id, opts, { include_hidden: false, include_blank: false } %>
      <%= pr.label :country_id, I18n.t('aypex.admin.label') %>
    <% end %>
  <% end %>

  <div class="text-end">
    <%= render partial: 'aypex/admin/shared/submit_button' %>
  </div>
<% end %>
