<%= fields_for @promotion do |promotion_form| %>
  <%= promotion_form.fields_for :promotion_actions, promotion_action, child_index: promotion_action.id do |promotion_action_form| %>
    <%= promotion_action_form.fields_for :calculator_attributes, promotion_action.calculator do |calculator_form| %>
      <div class="col-12 col-lg-6 mb-3">
        <div class="form-floating">
          <%= calculator_form.text_field :amount, data: {input_disable_target: "disable" } %>
          <%= calculator_form.label :amount %>
        </div>
      </div>

      <div class="col-12 col-lg-6 mb-3">
        <div class="form-floating">
          <%= calculator_form.text_field :currency, data: {input_disable_target: "disable" } %>
          <%= calculator_form.label :currency %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
