<% content_for :breadcrumb do %>
  <%= breadcrumb_builder(link_one_uri: aypex.admin_base_categories_path,
                         link_one_text: I18n.t("aypex.admin.base_categories"),
                         link_two_uri: aypex.edit_admin_base_category_path(@base_category),
                         link_two_text: @base_category.root.name,
                         current_page_name: I18n.t("aypex.admin.new_category")) %>
<% end %>

<%= form_with model: [:admin, @base_category, @category] do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('aypex.admin.create'), 'save.svg' %>
    <span class="or"><%= I18n.t("aypex.admin.or") %></span>
    <%= link_to_with_icon I18n.t('aypex.admin.cancel'), aypex.edit_admin_base_category_url(@base_category), icon: "x-lg.svg" %>
  </div>
<% end %>
