<% content_for :page_title do %>
  <%= link_to I18n.t("aypex.admin.base_categories"), aypex.admin_base_categories_url %> /
  <%= link_to @base_category.root.name, aypex.edit_admin_base_category_url(@base_category) %> / New
<% end %>

<%= form_with model: [:admin, @base_category, @category] do |f| %>
  <% @category.build_image %>

  <%= render 'form', f: f %>

  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('aypex.admin.create'), 'save.svg' %>
    <span class="or"><%= I18n.t("aypex.admin.or") %></span>
    <%= link_to_with_icon I18n.t('aypex.admin.cancel'), aypex.edit_admin_base_category_url(@base_category), icon: "x-lg.svg" %>
  </div>
<% end %>
