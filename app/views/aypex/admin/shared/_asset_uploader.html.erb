<%= link_to "Upload Image", aypex.admin_assets_path %>

<% if @store.logo.image.asset.attachment&.attached? %>
  <%= image_tag main_app.cdn_image_url(@store.logo_image.attachment) %>
<% end %>

<%= f.fields_for :logo do |logo_field| %>
  <%= logo_field.fields_for :image do |image_field| %>

    <div class="d-flex rounded bg-light flex-row align-items-center position-relative w-100">
      <%= image_field.label :attachment, class: "d-flex position-absolute w-100 h-100" do %>
      <% end %>
      <div class="m-2">
        <div>
          <div class="d-flex border rounded align-items-center justify-content-center p-2">
            <%= aypex_admin_svg_tag("image.svg", width: 30, height: 30) %>
          </div>
        </div>
      </div>
      <div class="flex-fill">
        Add Default Logo
      </div>
    </div>

    <%= image_field.file_field :attachment, class: "d-none" %>
  <% end %>
<% end %>
