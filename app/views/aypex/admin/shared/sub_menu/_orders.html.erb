<ul id="sidebar-orders" class="collapse nav nav-pills " data-hook="admin_orders">
  <%= tab :orders, match_path: /orders/, url: aypex.admin_orders_path, label: I18n.t('aypex.admin.all_orders') %>
  <%= tab :draft_orders, match_path: /cart/, url: aypex.admin_orders_path(q: { completed_at_not_null: false, state_eq: :cart}), label: I18n.t('aypex.admin.draft_orders') %>
  <%= tab :abandoned_checkouts, match_path: /state_in/, url: aypex.admin_orders_path(q: { completed_at_not_null: false, state_in: %i[address delivery payment confirm]}), label: I18n.t('aypex.admin.abandoned_checkouts') %>
</ul>
