<div data-hook="admin_named_type_form_fields">
  <%= f.field_container :name do %>
    <%= f.text_field :name, class: 'form-control', placeholder: raw(Aypex.t(:name) + required_span_tag), required: true %>
    <%= f.label :name, raw(Aypex.t(:name) + required_span_tag) %>
  <% end %>

  <div class="form-check">
    <%= f.check_box :active, class: 'form-check-input' %>
    <%= f.label :active, Aypex.t(:active), class: 'form-check-label' %>
  </div>
</div>
