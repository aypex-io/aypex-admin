<div id="country_members" data-hook="member">
  <div class="card">
    <div class="card-header d-flex">
      <div class="flex-fill">
        <h5 class="card-title"><%= I18n.t("aypex.admin.countries") %></h5>
      </div>
      <div>
      </div>
    </div>

    <div class="card-body">
      <%= zone_form.field_container :country_ids do %>
        <%= zone_form.collection_select :country_ids, all_country_options, :last, :first, {}, { disabled: @zone.new_record?, multiple: true } %>
        <%= zone_form.label :country_ids, I18n.t("aypex.admin.countries") %>
      <% end %>
    </div>
    <div class="card-footer">
       <%= render partial: 'aypex/admin/shared/resource_actions' %>
    </div>
  </div>
</div>
