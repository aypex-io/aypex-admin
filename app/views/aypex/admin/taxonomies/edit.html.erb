<% content_for :page_title do %>
  <%= breadcrumb_builder(link_one_uri: aypex.admin_taxonomies_path, link_one_text: I18n.t('aypex.admin.taxonomies.categories'), current_page_name: @object.name) %>
<% end %>

<div id="sortable-tree-area">
  <div class="row">
    <div class="col-12">

      <div class="card mb-3">
        <div class="card-header">
          <div class="row pb-0">
            <div class="col d-flex my-1">
              <%= link_to_with_icon I18n.t('aypex.admin.taxonomies.edit_root_taxonomy', name: @taxonomy.root.name ), aypex.edit_admin_taxonomy_taxon_path(@taxonomy, @taxonomy.root.id), icon: 'edit.svg', class: 'text-nowrap btn btn-secondary btn-sm align-self-center' %>
            </div>
            <div class="col d-flex my-1 justify-content-end">
              <%= link_to_with_icon I18n.t('aypex.admin.taxonomies.add_new_taxon'), aypex.new_admin_taxonomy_taxon_path(@taxonomy.id), icon: 'plus-square.svg', class: 'text-nowrap btn btn-sm btn-primary align-self-center' %>
            </div>
          </div>
        </div>

        <% if @taxonomy.root.present? %>
        <div id="<%= dom_id(@taxonomy) %>_sortable_tree_area">
          <%= render 'aypex/admin/taxonomies/tree' %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
