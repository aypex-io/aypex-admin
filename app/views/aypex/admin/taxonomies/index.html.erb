<% content_for :page_title do %>
  <%= I18n.t('aypex.admin.taxonomies.categories') %>
<% end %>

<% if @taxonomies.any? %>
  <div id="list-taxonomies" data-hook>
    <%= render 'list' %>
  </div>
<% else %>
  <div class="text-center no-objects-found m-5">
    <%= Aypex.t(:no_resource_found, resource: plural_resource_name(Aypex::Taxonomy)) %>,
    <%= link_to Aypex.t(:add_one), new_object_url if can?(:create, Aypex::Taxonomy) %>!
  </div>
<% end %>
