<div data-hook="admin_state_form_fields" class="row">
  <div class="col-12 col-md-6">
    <%= f.field_container :name do %>
      <%= f.text_field :name, class: 'form-control', placeholder: I18n.t("aypex.admin.name"), required: true %>
      <%= f.label :name, I18n.t("aypex.admin.name") %>
    <% end %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.field_container :abbr do %>
      <%= f.text_field :abbr, class: 'form-control', placeholder: Aypex.t(:abbreviation), required: true %>
      <%= f.label :abbr, Aypex.t(:abbreviation) %>
    <% end %>
  </div>
</div>
