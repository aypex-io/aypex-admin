<fieldset data-hook="credit_card">
  <legend><%= I18n.t("aypex.admin.credit_card") %></legend>
  <div class="table-responsive border rounded mb-3">
    <table class="table table-condensed">
      <tr>
        <th width="20%"><%= I18n.t("aypex.admin.name_on_card") %>:</th>
        <td><%= payment.source.name %></td>
      </tr>
      <tr>
        <th><%= I18n.t("aypex.admin.card_type") %>:</th>
        <td><%= payment.source.display_brand %></td>
      </tr>
      <tr>
        <th><%= I18n.t("aypex.admin.card_number") %>:</th>
        <td><%= payment.source.display_number %></td>
      </tr>
      <tr>
        <th><%= I18n.t("aypex.admin.expiration") %>:</th>
        <td><%= payment.source.month %>/<%= payment.source.year %></td>
      </tr>
    </table>
  </div>
</fieldset>
