<fieldset data-hook="credit_card">
  <legend><%= Aypex.t(:credit_card) %></legend>
  <div class="table-responsive border rounded mb-3">
    <table class="table table-condensed">
      <tr>
        <th width="20%"><%= Aypex.t(:name_on_card) %>:</th>
        <td><%= payment.source.name %></td>
      </tr>
      <tr>
        <th><%= Aypex.t(:card_type) %>:</th>
        <td><%= payment.source.display_brand %></td>
      </tr>
      <tr>
        <th><%= Aypex.t(:card_number) %>:</th>
        <td><%= payment.source.display_number %></td>
      </tr>
      <tr>
        <th><%= Aypex.t(:expiration) %>:</th>
        <td><%= payment.source.month %>/<%= payment.source.year %></td>
      </tr>
    </table>
  </div>
</fieldset>
