<%= render partial: 'aypex/admin/shared/order_tabs', locals: { current: :adjustments } %>

<%= render partial: 'aypex/admin/shared/error_messages', locals: { target: @adjustment } %>

<%= form_with model: @adjustment, url: admin_order_adjustment_path(@order, @adjustment), method: :put do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button I18n.t("aypex.admin.continue"), 'save.svg' %>
      <span class="or"><%= I18n.t("aypex.admin.or") %></span>
      <%= link_to_with_icon(I18n.t('aypex.admin.cancel'), aypex.admin_order_adjustments_url(@order), icon: 'x-lg.svg') %>
    </div>
  </fieldset>
<% end %>
