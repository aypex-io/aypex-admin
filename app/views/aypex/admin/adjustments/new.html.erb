<%= render partial: 'aypex/admin/shared/order_tabs', locals: { current: :adjustments } %>

<%= render partial: 'aypex/admin/shared/error_messages', locals: { target: @adjustment } %>

<%= form_with model: @adjustment, url: admin_order_adjustments_path do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Aypex.t(:continue), 'save.svg' %>
      <span class="or"><%= Aypex.t(:or) %></span>
      <%= link_to_with_icon(I18n.t('aypex.admin.actions.cancel'), aypex.admin_order_adjustments_url(@order), icon: 'x-lg.svg') %>
    </div>
  </fieldset>
<% end %>
