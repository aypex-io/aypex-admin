<% content_for :page_title do %>
  <%= I18n.t('aypex.admin.base_categories.categories') %>
<% end %>

<% if @base_categories.any? %>
  <div id="list-base_categories" data-hook>
    <%= render 'list' %>
  </div>
<% else %>
  <div class="text-center no-objects-found m-5">
    <%= Aypex.t(:no_resource_found, resource: plural_resource_name(Aypex::BaseCategory)) %>,
    <%= link_to Aypex.t(:add_one), new_object_url if can?(:create, Aypex::BaseCategory) %>!
  </div>
<% end %>
