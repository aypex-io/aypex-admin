<div id="<%= dom_id(section) %>" class="col-12 p-0"
     data-sortable-update-url="<%= aypex.update_position_admin_cms_page_cms_section_path(@cms_page, section) %>"
     data-stream-exit-class="animate__fadeOut"
     data-controller="scroll-iframe"
     data-scroll-iframe-identifier-value="<%= section.id %>"
     data-scroll-iframe-iframe-id-value="page-live-preview">
  <div class="row m-0 m-1 mb-0 border border-secondary">
    <div class="d-flex align-items-center move-handle handle">
      <%= aypex_admin_svg_tag "grip-vertical.svg", size: '22px * 22px' %>
    </div>

    <div class="col d-flex pe-0 truncate align-items-center">
      <div class="align-self-center overflow-hidden w-100">
          <h6 class="m-0 truncate"><%= section.section_details[:name] %></h6>
      </div>
    </div>

    <div class="col-auto h-100 d-flex flex-column align-self-sm-stretch p-0 justify-content-between actions cms_section_action_col">
      <%= link_to_edit(section, url: aypex.edit_admin_cms_page_cms_section_path(@cms_page, section), data: { turbo_stream: true }) %>
      <%= link_to_delete(section, url: aypex.admin_cms_page_cms_section_path(@cms_page, section)) if can?(:destroy, section) %>
    </div>
  </div>
</div>
