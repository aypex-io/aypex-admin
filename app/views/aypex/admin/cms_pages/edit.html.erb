<% content_for :breadcrumb do %>
  <%= breadcrumb_builder(link_one_uri: aypex.admin_cms_pages_path, link_one_text: I18n.t('aypex.admin.all_pages'), current_page_name: @cms_page.title) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_tag(I18n.t('aypex.admin.save'), {data: { input__required_target: "saveButton", form_state_target: "saveButton"}, class: 'btn btn-light'}) %>
<% end %>

<% if @cms_page.sections? %>
  <%= render partial: 'live_preview_area' %>
<% end %>
