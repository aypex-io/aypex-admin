<% content_for :page_title do %>
  <%= link_to Aypex.t(:taxonomies), aypex.admin_taxonomies_url %> /
  <%= link_to @taxonomy.root.name, aypex.edit_admin_taxonomy_url(@taxonomy) %> / New
<% end %>

<%= form_with model: [:admin, @taxonomy, @taxon] do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('aypex.admin.actions.create'), 'save.svg' %>
    <span class="or"><%= Aypex.t(:or) %></span>
    <%= link_to_with_icon I18n.t('aypex.admin.actions.cancel'), aypex.edit_admin_taxonomy_url(@taxonomy), icon: "x-lg.svg" %>
  </div>
<% end %>
