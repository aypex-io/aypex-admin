<div class="card">
  <div class="card-header">
    <h5 class="card-title">
      <%= Aypex.t(:email).pluralize %>
    </h5>
  </div>
  <div class="card-body">
    <%= f.field_container :mail_from_address do %>
      <%= f.text_field :mail_from_address, required: true %>
      <%= f.label :mail_from_address, raw(Aypex.t(:mail_from_address)  + required_span_tag) %>
    <% end %>

    <% if @store.persisted? %>
      <%= f.field_container :customer_support_email do %>
        <%= f.text_field :customer_support_email %>
        <%= f.label :customer_support_email, Aypex.t(:customer_support_email) %>
      <% end %>

      <%= f.field_container :new_order_notifications_email do %>
        <%= f.text_field :new_order_notifications_email %>
        <%= f.label :new_order_notifications_email, Aypex.t(:new_order_notifications_email) %>
      <% end %>
    <% end %>
  </div>
</div>
