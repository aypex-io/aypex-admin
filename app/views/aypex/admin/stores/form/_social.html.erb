<div class="card">
  <div class="card-header">
    <h5 class="card-title">
      <%= I18n.t("aypex.admin.social") %>
    </h5>
  </div>
  <div class="card-body">
    <%= f.field_container :facebook do %>
      <%= f.text_field :facebook %>
      <%= f.label :facebook, I18n.t("aypex.admin.facebook_username") %>
    <% end %>

    <%= f.field_container :twitter do %>
      <%= f.text_field :twitter %>
      <%= f.label :twitter, I18n.t("aypex.admin.twitter_username") %>
    <% end %>

    <%= f.field_container :instagram do %>
      <%= f.text_field :instagram %>
      <%= f.label :instagram, I18n.t("aypex.admin.instagram_username") %>
    <% end %>
  </div>
</div>
