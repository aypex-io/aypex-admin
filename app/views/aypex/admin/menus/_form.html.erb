<div data-hook="admin_menu_form_fields" class="row">
  <div class='col-12 col-md-4'>
    <%= f.field_container :name do %>
      <%= f.text_field :name, required: true %>
      <%= f.label :name, raw(Aypex.t(:name) + required_span_tag) %>
    <% end %>
  </div>
  <div class='col-12 col-md-4'>
    <%= f.field_container :location do %>
      <%= f.select(:location, aypex_humanize_dropdown_values('Aypex::Menu', { const: 'MENU_LOCATIONS', paramterize_values: true }), {include_blank: false}) %>
      <%= f.label :location, I18n.t('aypex.admin.location') %>
    <% end %>
  </div>
  <div class='col-12 col-md-4'>
    <%= f.field_container :locale do %>
      <%= f.select :locale, options_from_collection_for_select(all_locales_options, :last, :first, @menu.locale || I18n.locale), {} %>
      <%= f.label :language %>
    <% end %>
  </div>
</div>
