<%= turbo_frame_tag :product_properties do %>
  <%= form_with model: [:admin, @product], data: {controller: "form-state"} do |f| %>
    <div class="card">
      <% content_for :product_properties_title_buttons do %>
        <% if can? :create, Aypex::ProductProperty %>
          <%= link_to_with_icon(I18n.t('aypex.admin.select_from_prototype'), aypex.prototypes_admin_product_product_properties_path(@product), icon: 'list.svg', class: 'btn btn-aypex btn-sm', data: { turbo_frame: :modal}) if Aypex::Prototype.any? %>
          <%= link_to_with_icon I18n.t('aypex.admin.add_new_property'), aypex.new_admin_product_product_property_path(@product), icon: 'plus-square.svg', class: 'btn btn-aypex btn-sm', data: { turbo_frame: :modal } %>
        <% end %>
      <% end %>
      <%= render 'aypex/admin/shared/card_header', card_head_content_for: :product_properties_title_buttons, title: I18n.t('aypex.admin.properties') %>

      <% if @product.properties.any? %>
      <div class="table-responsive">
        <table id="product_properties" class="table">
          <thead class="text-body-secondary">
            <tr data-hook="product_properties_header">
              <th></th>
              <th><%= I18n.t("aypex.admin.name") %></th>
              <th><%= I18n.t("aypex.admin.value") %></th>
              <th class="text-center"><%= I18n.t("aypex.admin.show") %></th>
              <th class="actions"></th>
            </tr>
          </thead>
          <tbody data-controller="sortable" data-sortable-resource-name-value="product_property">
            <%= f.fields_for :product_properties do |pp_form| %>
              <%= render 'aypex/admin/product_properties/product_property_fields', f: pp_form if pp_form.object.persisted? %>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
        <% if can? :create, Aypex::ProductProperty %>
          <div class="text-center m-4">
            <%= I18n.t('aypex.admin.add_first_property') %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
