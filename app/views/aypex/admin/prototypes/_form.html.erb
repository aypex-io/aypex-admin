<div class="row" data-hook="admin_prototype_form_fields">
  <div class="col-12">
    <%= f.field_container :name do %>
      <%= f.text_field :name, class: 'form-control', required: true, placeholder: raw(I18n.t('aypex.admin.name') + required_span_tag) %>
      <%= f.label :name, raw(I18n.t('aypex.admin.name') + required_span_tag) %>
    <% end %>
  </div>

  <div class="col-12 col-md-4">
    <%= f.field_container :property_ids do %>
      <%= f.select :property_ids, Aypex::Property.all.map { |p| ["#{p.presentation} (#{p.name})", p.id] }, {}, { class:'form-select', placeholder: I18n.t('aypex.admin.properties'), multiple: true, data: { controller: 'ts--select' } } %>
      <%#= f.select :property_ids, options_from_collection_for_select(f.object.properties, :id, :name, f.object.property_ids),
                                { include_hidden: true },
                                  multiple: true,
                                  class:'form-select',
                                  data: { controller: 'ts--search',
                                          ts__search_endpoint_value: 'properties',
                                          ts__search_fields_value: ['name'],
                                          ts__search_ransack_value: ['name_i_cont']
                                         } %>
      <%= f.label :property_ids, I18n.t("aypex.admin.properties") %>
    <% end %>
  </div>

  <div class="col-12 col-md-4">
    <%= f.field_container :option_type_ids  do %>
      <%= f.select :option_type_ids, options_from_collection_for_select(f.object.option_types, :id, :name, f.object.option_type_ids),
                                { include_hidden: true },
                                  multiple: true,
                                  class:'form-select',
                                  data: { controller: 'ts--search',
                                          ts__search_endpoint_value: 'option_types',
                                          ts__search_fields_value: ['name'],
                                          ts__search_ransack_value: ['name_i_cont']
                                         } %>
      <%= f.label :option_type_ids, I18n.t('aypex.admin.option_types') %>
    <% end %>
  </div>

  <div class="col-12 col-md-4">
    <%= f.field_container :category_ids do %>
      <%= f.select :category_ids, options_from_collection_for_select(f.object.categories, :id, :pretty_name, f.object.category_ids),
                                { include_hidden: true },
                                  multiple: true,
                                  class:'form-select',
                                  data: { controller: 'ts--search',
                                          ts__search_endpoint_value: 'categories',
                                          ts__search_txt_value: 'pretty_name',
                                          ts__search_fields_value: ['pretty_name'],
                                          ts__search_ransack_value: ['pretty_name_i_cont']
                                         } %>
      <%= f.label :category_ids, I18n.t('aypex.admin.categories') %>
    <% end %>
  </div>
</div>
