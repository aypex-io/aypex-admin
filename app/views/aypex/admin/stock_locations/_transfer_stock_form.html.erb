<%= form_tag transfer_stock_admin_stock_locations_path do %>
  <fieldset>
    <legend><%= I18n.t("aypex.admin.move_stock_between_locations") %></legend>
    <div data-hook="admin_stock_movements_form_fields" class="row">
      <div class="col-12 col-md-5">
        <div class="form-group" id="stock_movement_transfer_from_field">
          <%= label_tag :stock_location_from_id, I18n.t("aypex.admin.transfer_from_location") %>
          <%= select_tag :stock_location_from_id, options_from_collection_for_select(@stock_locations, :id, :name), data: {controller: 'ts--select'} %>
        </div>
      </div>
      <div class="col-12 col-md-5">
        <div class="form-group" id="stock_movement_transfer_to_field">
          <%= label_tag :stock_location_to_id, I18n.t("aypex.admin.transfer_to_location") %>
          <%= select_tag :stock_location_to_id, options_from_collection_for_select(@stock_locations, :id, :name), data: {controller: 'ts--select'} %>
        </div>
      </div>

      <div class="col-12 col-md-5">
        <div class="form-group" id="stock_movement_variant_id_field">
          <%= label_tag 'variant_id', I18n.t("aypex.admin.variant") %>
          <%= select_tag :variant_id, options_from_collection_for_select(@variants, :id, :name_and_sku), data: {controller: 'ts--select'} %>
        </div>
      </div>

      <div class="col-12 col-md-5">
        <div class="form-group" id="stock_movement_quantity_field">
          <%= label_tag 'quantity', I18n.t("aypex.admin.quantity") %>
          <%= number_field_tag :quantity, 1, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-actions" data-hook="buttons">
      <%= button I18n.t("aypex.admin.transfer_stock"), 'add' %>
      <span class="or"><%= I18n.t("aypex.admin.or") %></span>
      <%= link_to_with_icon I18n.t('aypex.admin.cancel'), collection_url, icon: 'x-lg.svg' %>
    </div>
  </fieldset>
<% end %>
