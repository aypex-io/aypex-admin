<% unless @menu_item.image.new_record? %>
  <div>
    <%= link_to I18n.t("aypex.admin.remove_image"), remove_icon_admin_menu_menu_item_path(@menu, @menu_item), method: :delete %>
  </div>
   <div class="admin-img-holder m-auto">
     <%= image_tag(main_app.cdn_image_url(@menu_item.image.attachment)) %>
   </div>
<% end %>

<%= f.field_container :image_attachment do %>
  <div class="form-floating">
    <%= ff.file_field :attachment %>
    <%= ff.label :attachment, I18n.t('aypex.admin.menu_item_icon') %>
  </div>
<% end %>


<%= f.field_container :image do %>
  <% if @menu_item.image.present? %>
  <span class="ms-2">
    <%#= link_to I18n.t("aypex.admin.remove_image"), remove_image_admin_base_category_category_url(@base_category.id, @category.id), method: :delete %>
  </span>
    <div class="product-image-container mb-3">
      <%= image_tag(main_app.cdn_image_url(@menu_item.image.try(:attachment)), class: 'w-100') if @menu_item.image %>
    </div>
  <% end %>
<% end %>

<%= f.label :image, I18n.t("aypex.admin.header_banner") %>
<%= f.file_field :image %>
