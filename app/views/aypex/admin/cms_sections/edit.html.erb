<% content_for :page_title do %>
<%= breadcrumb_builder(link_one_uri: aypex.admin_cms_pages_path, link_one_text: I18n.t('aypex.admin.all_pages'),
                       link_two_uri: aypex.edit_admin_cms_page_path(@cms_page), link_two_text: @cms_page.title,
                       current_page_name: @cms_section.name) %>
<% end %>

<%= turbo_frame_tag :cms_section_settings do %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title"><%= I18n.t("aypex.admin.section_settings") %></h5>
    </div>

    <div class="card-body">
      <%= form_with model: @cms_section, scope: :cms_section, url: aypex.admin_cms_page_cms_section_path(@cms_page, @cms_section), class: "row", data: {controller: "form-validation", turbo_frame: :cms_section_settings}, method: :patch do |f| %>
        <div class="col-12 col-md-4">
          <%= f.field_container :name do %>
            <%= f.text_field :name, required: true %>
            <%= f.label :name, raw(I18n.t("aypex.admin.name") + required_span_tag) %>
          <% end %>
        </div>

        <div class="col-12 col-md-4">
          <%= f.field_container :fit do %>
            <%= f.select(:fit, @cms_section.boundaries, {include_blank: false}) %>
            <%= f.label :fit, I18n.t('aypex.admin.fit') %>
          <% end %>
        </div>

        <div class="col-12 col-md-4">
          <%= f.field_container :gutters do %>
            <%= f.select(:gutters, @cms_section.gutters_sizes, {include_blank: false}) %>
            <%= f.label :gutters, I18n.t('aypex.admin.set_gutters') %>
          <% end %>
        </div>

        <div class="col-12">
          <%= render partial: 'aypex/admin/shared/resource_actions' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag :cms_container_settings do %>
  <%= form_with model: @cms_section, scope: :cms_section, url: aypex.admin_cms_page_cms_section_path(@cms_page, @cms_section), data: {turbo_frame: :cms_container_settings }, method: :patch do |f| %>
    <%= render partial: 'form', locals: { f: f } %>
  <% end %>
<% end %>
